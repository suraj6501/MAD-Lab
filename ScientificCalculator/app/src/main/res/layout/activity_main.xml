<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E1E1E1"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="111dp"
        android:background="#FFFFFF"
        android:gravity="bottom|end"
        android:paddingRight="20px"
        android:text="0"
        android:textSize="60sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="83dp">

        <Button
            android:id="@+id/sin"
            android:layout_width="wrap_content"
            android:layout_height="78dp"
            android:layout_marginLeft="20px"
            android:layout_marginTop="20px"
            android:layout_marginRight="10px"
            android:layout_marginBottom="20px"
            android:layout_weight="1"
            android:backgroundTint="#FF9800"
            android:text="Sin"
            android:textSize="24sp" />

        <Button
            android:id="@+id/pow"
            android:layout_width="wrap_content"
            android:layout_height="78dp"
            android:layout_marginLeft="10px"
            android:layout_marginTop="20px"
            android:layout_marginRight="10px"
            android:layout_marginBottom="20px"
            android:layout_weight="1"
            android:backgroundTint="#FF9800"
            android:text="Pow"
            android:textSize="24sp" />

        <Button
            android:id="@+id/backspace"
            android:layout_width="wrap_content"
            android:layout_height="78dp"
            android:layout_marginLeft="10px"
            android:layout_marginTop="20px"
            android:layout_marginRight="10px"
            android:layout_marginBottom="20px"
            android:layout_weight="1"
            android:backgroundTint="#FF9800"
            android:text="⌫"
            android:textColor="#000000"
            android:textSize="24sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/clear"
            android:layout_width="wrap_content"
            android:layout_height="78dp"
            android:layout_marginLeft="10px"
            android:layout_marginTop="20px"
            android:layout_marginRight="20px"
            android:layout_marginBottom="20px"
            android:layout_weight="1"
            android:backgroundTint="#FF9800"
            android:text="C"
            android:textColor="#000000"
            android:textSize="24sp"
            android:textStyle="bold" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="87dp">

        <Button
            android:id="@+id/cos"
            android:layout_width="wrap_content"
            android:layout_height="78dp"
            android:layout_marginLeft="20px"
            android:layout_marginTop="20px"
            android:layout_marginRight="10px"
            android:layout_marginBottom="20px"
            android:layout_weight="1"
            android:backgroundTint="#FF9800"
            android:text="Cos"
            android:textColor="#FFFFFF"
            android:textSize="24sp" />

        <Button
            android:id="@+id/sqrt"
            android:layout_width="90dp"
            android:layout_height="78dp"
            android:layout_marginLeft="10px"
            android:layout_marginTop="20px"
            android:layout_marginRight="10px"
            android:layout_marginBottom="20px"
            android:layout_weight="1"
            android:backgroundTint="#FF9800"
            android:text="√"
            android:textSize="24sp" />

        <Button
            android:id="@+id/log"
            android:layout_width="wrap_content"
            android:layout_height="78dp"
            android:layout_marginLeft="10px"
            android:layout_marginTop="20px"
            android:layout_marginRight="10px"
            android:layout_marginBottom="20px"
            android:layout_weight="1"
            android:backgroundTint="#FF9800"
            android:text="Log"
            android:textSize="24sp" />

        <Button
            android:id="@+id/add"
            android:layout_width="wrap_content"
            android:layout_height="78dp"
            android:layout_marginLeft="10px"
            android:layout_marginTop="20px"
            android:layout_marginRight="20px"
            android:layout_marginBottom="20px"
            android:layout_weight="1"
            android:backgroundTint="#FF9800"
            android:text="+"
            android:textSize="24sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="90dp">

        <Button
            android:id="@+id/tan"
            android:layout_width="62dp"
            android:layout_height="78dp"
            android:layout_marginLeft="20px"
            android:layout_marginTop="20px"
            android:layout_marginRight="10px"
            android:layout_marginBottom="20px"
            android:layout_weight="1"
            android:backgroundTint="#FF9800"
            android:text="Tan"
            android:textSize="24sp" />

        <Button
            android:id="@+id/mod"
            android:layout_width="67dp"
            android:layout_height="78dp"
            android:layout_marginLeft="10px"
            android:layout_marginTop="20px"
            android:layout_marginRight="10px"
            android:layout_marginBottom="20px"
            android:layout_weight="1"
            android:backgroundTint="#FF9800"
            android:text="Mod"
            android:textSize="24sp" />

        <Button
            android:id="@+id/ln"
            android:layout_width="62dp"
            android:layout_height="78dp"
            android:layout_marginLeft="10px"
            android:layout_marginTop="20px"
            android:layout_marginRight="10px"
            android:layout_marginBottom="20px"
            android:layout_weight="1"
            android:backgroundTint="#FF9800"
            android:text="Ln"
            android:textSize="24sp" />

        <Button
            android:id="@+id/sub"
            android:layout_width="62dp"
            android:layout_height="78dp"
            android:layout_marginLeft="10px"
            android:layout_marginTop="20px"
            android:layout_marginRight="20px"
            android:layout_marginBottom="20px"
            android:layout_weight="1"
            android:backgroundTint="#FF9800"
            android:text="-"
            android:textSize="26sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="87dp">

        <Button
            android:id="@+id/nine"
            android:layout_width="wrap_content"
            android:layout_height="78dp"
            android:layout_marginLeft="20px"
            android:layout_marginTop="20px"
            android:layout_marginRight="10px"
            android:layout_marginBottom="20px"
            android:layout_weight="1"
            android:backgroundTint="#FF9800"
            android:text="9"
            android:textSize="24sp" />

        <Button
            android:id="@+id/eight"
            android:layout_width="wrap_content"
            android:layout_height="78dp"
            android:layout_marginLeft="10px"
            android:layout_marginTop="20px"
            android:layout_marginRight="10px"
            android:layout_marginBottom="20px"
            android:layout_weight="1"
            android:backgroundTint="#FF9800"
            android:text="8"
            android:textSize="24sp" />

        <Button
            android:id="@+id/seven"
            android:layout_width="wrap_content"
            android:layout_height="78dp"
            android:layout_marginLeft="10px"
            android:layout_marginTop="20px"
            android:layout_marginRight="10px"
            android:layout_marginBottom="20px"
            android:layout_weight="1"
            android:backgroundTint="#FF9800"
            android:text="7"
            android:textSize="24sp" />

        <Button
            android:id="@+id/mul"
            android:layout_width="wrap_content"
            android:layout_height="78dp"
            android:layout_marginLeft="10px"
            android:layout_marginTop="20px"
            android:layout_marginRight="20px"
            android:layout_marginBottom="20px"
            android:layout_weight="1"
            android:backgroundTint="#FF9800"
            android:text="*"
            android:textSize="24sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="88dp">

        <Button
            android:id="@+id/six"
            android:layout_width="wrap_content"
            android:layout_height="78dp"
            android:layout_marginLeft="20px"
            android:layout_marginTop="20px"
            android:layout_marginRight="10px"
            android:layout_marginBottom="20px"
            android:layout_weight="1"
            android:backgroundTint="#FF9800"
            android:text="6"
            android:textSize="24sp" />

        <Button
            android:id="@+id/five"
            android:layout_width="wrap_content"
            android:layout_height="78dp"
            android:layout_marginLeft="10px"
            android:layout_marginTop="20px"
            android:layout_marginRight="10px"
            android:layout_marginBottom="20px"
            android:layout_weight="1"
            android:backgroundTint="#FF9800"
            android:text="5"
            android:textSize="24sp" />

        <Button
            android:id="@+id/four"
            android:layout_width="wrap_content"
            android:layout_height="78dp"
            android:layout_marginLeft="10px"
            android:layout_marginTop="20px"
            android:layout_marginRight="10px"
            android:layout_marginBottom="20px"
            android:layout_weight="1"
            android:backgroundTint="#FF9800"
            android:text="4"
            android:textSize="24sp" />

        <Button
            android:id="@+id/div"
            android:layout_width="wrap_content"
            android:layout_height="78dp"
            android:layout_marginLeft="10px"
            android:layout_marginTop="20px"
            android:layout_marginRight="20px"
            android:layout_marginBottom="20px"
            android:layout_weight="1"
            android:backgroundTint="#FF9800"
            android:text="/"
            android:textSize="24sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="90dp">

        <Button
            android:id="@+id/three"
            android:layout_width="wrap_content"
            android:layout_height="78dp"
            android:layout_marginLeft="20px"
            android:layout_marginTop="20px"
            android:layout_marginRight="10px"
            android:layout_marginBottom="20px"
            android:layout_weight="1"
            android:backgroundTint="#FF9800"
            android:text="3"
            android:textSize="24sp" />

        <Button
            android:id="@+id/two"
            android:layout_width="wrap_content"
            android:layout_height="78dp"
            android:layout_marginLeft="10px"
            android:layout_marginTop="20px"
            android:layout_marginRight="10px"
            android:layout_marginBottom="20px"
            android:layout_weight="1"
            android:backgroundTint="#FF9800"
            android:text="2"
            android:textSize="24sp" />

        <Button
            android:id="@+id/one"
            android:layout_width="wrap_content"
            android:layout_height="78dp"
            android:layout_marginLeft="10px"
            android:layout_marginTop="20px"
            android:layout_marginRight="10px"
            android:layout_marginBottom="20px"
            android:layout_weight="1"
            android:backgroundTint="#FF9800"
            android:text="1"
            android:textSize="24sp" />

        <Button
            android:id="@+id/zero"
            android:layout_width="wrap_content"
            android:layout_height="78dp"
            android:layout_marginLeft="10px"
            android:layout_marginTop="20px"
            android:layout_marginRight="20px"
            android:layout_marginBottom="20px"
            android:layout_weight="1"
            android:backgroundTint="#FF9800"
            android:text="0"
            android:textSize="24sp" />

    </LinearLayout>

    <Button
        android:id="@+id/equal"
        android:layout_width="match_parent"
        android:layout_height="78dp"
        android:layout_marginLeft="20px"
        android:layout_marginRight="20px"
        android:layout_marginBottom="20px"
        android:layout_weight="1"
        android:backgroundTint="#F89400"
        android:text="="
        android:textColor="#000000"
        android:textSize="40sp" />


</LinearLayout>